@model PackageViewModel

@{
    ViewData["Title"] = "Rastrear Pacote";
}

<script type="text/javascript">

</script>

<div class="text-center">
    <h1 class="display-4">Rastrear Pacote</h1>
</div>

<div class="alert text-center text-danger" role="alert">
    @ViewBag.Erro
</div>

<div class="m-2">
    <form asp-controller="Packages" asp-action="Rastrear" method="post">

      <div class="form-group">
        <label for="p-title">Código do Pacote</label>
        <input type="text" class="form-control" id="p-title" name="code" placeholder="Digite o código do Pacote" />
      </div>

      <div class="d-grid">
         @* <input type="hidden" value=@Model.Id name="id"/>*@
        <button type="submit" class="btn btn-orange mt-2">Rastrear</button>
        <a role="button" class="btn btn-secondary mt-2" asp-controller="Home" asp-action="Index">Voltar</a>
      </div>
    </form>
</div>
@if (Model != null)
{
    <hr />
<div class="text-center">
    <hr />
    @if(Model.Delivered == true)
    {
        <button type="button" disabled class="btn btn-success">Pacote entregue</button>
    }
    else if(!Model.Delivered == true)
    {
         <button type="button" disabled class="btn btn-secondary">Pacote não entregue</button>
    }
   
</div>

<div class="m-4">
    <table class="table table-dark" id="UpdatesTable">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Id do Pacote</th>
          <th scope="col">Status</th>
          <th scope="col">Data da atualização</th>
        </tr>
      </thead>
      <tbody>

    @if (Model.Updates != null && Model.Updates.Any())
    {
            foreach (var item in Model.Updates)
                    {
                            <tr>
                              <th scope="row">@item.Id</th>
                              <td>@item.PackageId</td>
                              <td>@item.Status</td>
                              <td>@item.UpdateDate</td>                  
                            </tr>
                    }
    }
    </tbody>
   </table>
</div>
}

