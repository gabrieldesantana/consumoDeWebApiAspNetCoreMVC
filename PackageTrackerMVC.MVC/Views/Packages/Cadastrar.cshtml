@model PackageViewModel
@{
    ViewBag.Title = "Create New Package - MVC";
}
<div class="d-flex justify-content-center">
    <h2 class="h1">Cadastrar novo Pacote</h2>
</div>


@using (Html.BeginForm("Cadastrar", "Packages", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Título</label>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Weight)
            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="d-grid mt-2">
                <input type="submit" value="Cadastrar" class="btn btn-danger" />
            </div>
        </div>
}

<div class="d-grid mt-2">
    <a role="button" class="btn btn-secondary" asp-controller="Packages" asp-action="Index">Voltar</a>
</div>